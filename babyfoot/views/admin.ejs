<!doctype html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width,minimum-scale=1" />
        <title>Login</title>
        <!-- the form awesome library is used to add icons to our form -->
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.1/css/all.css" />
        <!-- include the stylesheet file -->
        <link href="/stylesheets/style.css" rel="stylesheet" type="text/css" />
    </head>

    <body>
        <div class="login">
            <h1>Utilisateurs enregistr√©s</h1>
            <% if (locals.error) { %>
            <h2><%= error %></h2>
            <% } %>
            <form action="/babyfoot/create" method="post">
                <label for="location">
                    <i class="fas fa-globe"></i>
                </label>
                <input type="text" name="location" placeholder="Location" id="location" required />
                <input type="submit" value="Add babyfoot" />
            </form>
            <table>
                <% users.forEach(function(user) { %>
                <tr>
                    <td><%= user.nom %></td>
                    <td><%= user.mail %></td>
                    <td><button onclick="deleteUser(<%= user.id %>)">SUPPR</button></td>
                </tr>
                <% }); %>
            </table>
            <table>
                <% babyfoots.forEach(function(babyfoot) { %>
                <tr>
                    <td><%= babyfoot.localisation %></td>
                    <td><button onclick="deleteBabyfoot(<%= babyfoot.id %>)">SUPPR</button></td>
                </tr>
                <% }); %>
            </table>
            <table>
                <% games.forEach(function(game) { %>
                <tr>
                    <td>Partie en cours : <%= game.babyfoot.localisation %></td>
                    <td><button onclick="endGame(<%= game.id %>)">END</button></td>
                </tr>
                <% }); %>
            </table>

            <a href="/logout">Logout</a>
        </div>
        <script src="../javascripts/main.js"></script>
    </body>
</html>
